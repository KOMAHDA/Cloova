<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Основной серый фон с закруглениями -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/dark_gray_background"/>
                    <corners android:radius="25dp"/>
                </shape>
            </item>

            <!-- Темная стрелочка справа -->
            <item android:gravity="end|center_vertical" android:right="12dp">
                <vector android:width="24dp" android:height="24dp"
                    android:viewportWidth="24" android:viewportHeight="24">
                    <path android:fillColor="@color/dark_arrow"
                        android:pathData="M7,10l5,5 5,-5z"/>
                </vector>
            </item>
        </layer-list>
    </item>
</selector>