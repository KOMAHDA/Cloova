            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/logoTextView">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
