<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/fon_reg"
tools:context=".RegistrationActivity">

<ImageView
    android:id="@+id/imageView6"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:src="@drawable/svetli_3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:contentDescription="@null"/>

<ImageView
    android:id="@+id/imageView7"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:src="@drawable/svetli_3_snizu"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:contentDescription="@null"/>

<ImageView
    android:id="@+id/imageView8"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:src="@drawable/temni_3_snizu"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:contentDescription="@null"/>

    <Button
        android:id="@+id/gobackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        android:backgroundTint="@android:color/white"
        android:text="@string/strelka"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/strelka"/>

    <TextView
        android:id="@+id/logoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/marcellus"
        android:text="@string/logo_text"
        android:textColor="@color/login_dark_blue"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/stil"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoTextView" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="459dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:labelFor="@id/nameEditText"
                android:text="@string/name"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/login_input_gray"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/nameLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:labelFor="@id/nameEditText"
                android:text="@string/profile_city_label"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/nameEditText2"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/login_input_gray"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/nameLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:labelFor="@id/nameEditText"
                android:text="@string/happy"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/nameEditText3"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/login_input_gray"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/nameLabel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:labelFor="@id/nameEditText"
                android:text="@string/profile_style_label"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/nameEditText4"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/login_input_gray"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textSize="17sp" />


        </LinearLayout>

    </ScrollView>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="@font/manrope_bold"
        android:gravity="center"
        android:text="@string/sozdanie"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="Registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"/>


</androidx.constraintlayout.widget.ConstraintLayout>